{% extends "_base.jinja" %}

{% block main %}
<div class="container">
    <div class="row">
        <div class="col-12 p-2">
                <table class="table bg-dark bg-opacity-50 text-light rounded"  style="border-color: slategray">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Designation</th>
                            <th>Departure</th>
                            <th>Arrival</th>
                            <th>Seats</th>
                            <th>Aircraft</th>
                            <th>Origin Of</th>
                            <th>Return Of</th>
                            <th>Price</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody style="border-color: slategray">
                        {% for booking in booking_data %}
                            <tr class="{% if booking.get("Cancelled") %}bg-danger bg-opacity-50{% elif booking.get("Completed") %}bg-primary bg-opacity-50{% endif %}" style="border-color: slategray">
                                <td>{{ booking.get("Booking ID") }}</td>
                                <td>{{ booking.get("User Email") }}</td>
                                <td>{{ booking.get("Flight Designation") }}</td>
                                <td>{{ booking.get("Departure Airport Name") }} <br> {{ booking.get("Departure").strftime("%-I:%M %p (UTC %z) <br> %-d %b %Y") }}</td>
                                <td>{{ booking.get("Arrival Airport Name") }} <br> {{ booking.get("Arrival").strftime("%-I:%M %p (UTC %z) <br> %-d %b %Y") }}</td>
                                <td>{{ booking.get("Booked Seats") }}</td>
                                <td>{{ booking.get("Aircraft Model") }} ({{ booking.get("Aircraft Registration") }})</td>
                                <td>{{ booking.get("Return Booking ID") }}</td>
                                <td>{{ booking.get("Origin Booking ID") }}</td>
                                <td>{{ booking.get("Price") }}</td>
                                <td>{{ booking.get("Creation").strftime("%x<br> %X") }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
    </div>
</div>
{% endblock %}