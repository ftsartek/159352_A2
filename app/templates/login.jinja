{% extends "_base.jinja" %}

{% block main %}

<h1>Login Page</h1>

<form method=post class="form-group">
    {{ form.csrf_token }}
    <dl>
        {{ form.email.label }}
        {{ form.email(class_="form-control") }}
        {{ form.password.label }}
        {{ form.password(class_="form-control") }}
    </dl>
    <p><input type="submit" value="Log In">
</form>

{% endblock %}